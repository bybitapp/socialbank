{
  "name": "sotec",
  "version": "1.0.0",
  "private": true,
  "main": "server.js",
  "license": "UNLICENSED",
  "homepage": "http://sotec.io",
  "engines": {
    "node": "8.4.0"
  },
  "scripts": {
    "server": "PORT=8088 NODE_PATH=. nodemon --watch lib --watch server.js ./server.js",
    "client": "react-scripts start",
    "dev": "concurrently 'npm run server' 'npm run client'",
    "start": "NODE_PATH=. node server.js",
    "build-js": "uglifyjs ./public/js/jquery.js ./public/js/functions.js ./public/js/plugins.js ./public/js/custom.js ./public/js/getmdl/material.min.js -c -m -o ./public/dist/static.min.js",
    "build-css": "./node_modules/.bin/cleancss -o ./public/dist/static.min.css ./public/css/fonts/googleapis/font.css  ./public/css/fonts/googleapis/icon.css ./public/css/getmdl/material.teal-indigo.min.css ./public/css/bootstrap.css  ./public/css/style.css ./public/css/dark.css ./public/css/font-icons.css ./public/css/magnific-popup.css ./public/css/responsive.css ./public/css/custom.css ./public/css/creditcard.css ./public/css/paymentfont.min.css ./public/css/table.css ./public/css/react-redux-toastr.min.css",
    "build": "npm run build-js && npm run build-css && react-scripts build",
    "test:client": "NODE_PATH=. react-scripts test --env=jsdom",
    "test:server": "NODE_PATH=. mocha './{,!(node_modules)/**/}*.test.js'",
    "test": "yarn run test:client && yarn run test:server",
    "eject": "react-scripts eject",
    "postinstall": "yarn run build",
    "lint": "eslint ./lib ./src"
  },
  "proxy": "http://localhost:8088",
  "dependencies": {
    "@google/maps": "^0.4.3",
    "airbrake": "^2.1.0",
    "axios": "^0.16.2",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.18.1",
    "circular-json": "^0.3.3",
    "compression": "^1.7.0",
    "concurrently": "^3.5.0",
    "connect-mongo": "^1.3.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "eslint-config-standard-react": "^5.0.0",
    "express": "^4.15.4",
    "express-route-builder": "https://github.com/pasupulaphani/express-route-builder",
    "express-session": "^1.15.5",
    "generate-password": "^1.3.0",
    "google-map-react": "^0.24.0",
    "got": "^7.1.0",
    "joi": "^11.0.1",
    "lodash": "^4.17.4",
    "lusca": "^1.5.1",
    "mailchimp-client": "https://github.com/pearlshare/mailchimp-client",
    "mailgun-js": "^0.13.1",
    "material-design-lite": "^1.3.0",
    "moment": "^2.18.1",
    "mongoose": "^4.11.11",
    "open_payments_cloud_application_api": "^1.1.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "ramda": "^0.24.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-modal": "^2.3.2",
    "react-redux": "^5.0.6",
    "react-redux-loading-bar": "^2.9.2",
    "react-redux-toastr": "7.1.5",
    "react-router-dom": "^4.2.2",
    "react-scripts": "^1.0.13",
    "recompose": "^0.25.0",
    "redux": "^3.7.2",
    "redux-form": "^7.0.4",
    "redux-thunk": "^2.2.0",
    "require-directory": "^2.1.1",
    "uuid": "^3.1.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "clean-css-cli": "^4.1.9",
    "eslint": "^4.7.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1",
    "should": "^13.0.1",
    "uglify-js": "^3.1.1"
  }
}
